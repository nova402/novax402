# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,tsx,jsx,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{rs,toml}]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.{c,h}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

