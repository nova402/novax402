{
  "name": "@nova402/core",
  "version": "1.0.0",
  "description": "Core x402 protocol implementation for Nova402",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "x402",
    "http-402",
    "payments",
    "blockchain",
    "base",
    "solana",
    "nova402",
    "micropayments"
  ],
  "author": "Nova402 Team <dev@nova402.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nova402/nova-utils.git",
    "directory": "typescript/packages/core"
  },
  "homepage": "https://nova402.com",
  "bugs": {
    "url": "https://github.com/nova402/nova-utils/issues"
  },
  "dependencies": {
    "ethers": "^6.13.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

